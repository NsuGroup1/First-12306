<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:bottom="1dp"
        android:right="1dp"
        android:top="1dp"
        android:left="1dp">
        <shape>
            <gradient
                android:startColor="#00A6FA"

                android:endColor="#0176F4"
                android:type="linear"
                android:angle="0"
                android:centerX="0.5"
                android:centerY="0.5" />

            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <!-- 圆角 -->
            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>
