<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_listview_03_adcts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/listview_radius_shape">

    <CheckBox
        android:id="@+id/checkBox_adcts"
        android:layout_width="51dp"
        android:layout_height="66dp"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_name_adcts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_id_adcts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_phone_adcts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_adcts"
        android:layout_width="31dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/forward_25" />
</LinearLayout>