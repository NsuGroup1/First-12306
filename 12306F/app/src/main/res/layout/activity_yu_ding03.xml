<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ticket.YuDing03">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_gradient_blue">

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_city_03"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center|bottom"
                android:text="北京"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_fachetime03"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#CCCCCC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_leixing03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="TextView"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_liechehao03"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center|bottom"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                app:srcCompat="@drawable/to" />

            <TextView
                android:id="@+id/textView_date03"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arrive_city_03"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center|bottom"
                android:text="大连"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView_arrivaltime03"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#CCCCCC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_price03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="TextView"
                android:textColor="#FFA500"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_addren03"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center|left"
        android:text="+添加乘车人"
        android:textColor="#FFA500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <ListView
        android:id="@+id/yuding03_listView"
        android:layout_width="397dp"
        android:layout_height="221dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_addren03" />

    <TextView
        android:id="@+id/textView_jiesuan03"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="#6FA5FB"
        android:gravity="center|left"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yuding03_listView" />

    <TextView
        android:id="@+id/textView_tijiao03"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="#F15627"
        android:gravity="center"
        android:text="提交"
        android:textSize="20sp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_jiesuan03"
        app:layout_constraintTop_toBottomOf="@+id/yuding03_listView" />
</androidx.constraintlayout.widget.ConstraintLayout>