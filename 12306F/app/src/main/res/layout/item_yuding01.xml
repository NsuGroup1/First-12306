<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center">

    <TextView
        android:id="@+id/TicketNumber"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="G108"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/startImg"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/flg_shi" />

        <ImageView
            android:id="@+id/endImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:src="@drawable/flg_guo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="04:47"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/arriveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:46(0日)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15sp" />
    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TableRow
            android:id="@+id/TableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/Seat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="left"
                android:text="高级软卧:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Seat2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:text="软卧:200"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </TableRow>
        <TableRow
            android:id="@+id/TableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Seat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬座:200"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/Seat4"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="软卧:200"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>
    <ImageView
        android:id="@+id/image3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward_25"/>
</LinearLayout>
